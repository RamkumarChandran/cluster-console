<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>

    <bean id="controller.file" class="au.com.permeance.clusterconsole.controller.MonitorController">
        <constructor-arg index="0" name="monitorHistory" ref="messageListener.monitorHistory.file"/>
        <constructor-arg index="1" name="viewPrefix" value="file"/>
    </bean>

</beans>
